extends ../node_modules/jade-bootstrap/_bootstrap

block body
	+navbar(title, "dropdown_menu")
		+nav_item("/", "active") Home
		+nav_item("/browse?type=private_letters") Browse
		+nav_item("/search") Advanced Search
		+nav_item("/add") Add Document
	
	.container
		h1= title
		
		.container
			p Welcome to #{title}.

		.container
			form(class="form-inline" action="/search", method="get")
				input(class="form-control" style="width:100%" type="text", name="searchString" placeholder="Search titles")
				p
				+submit("Search")
